using System;

class HexadecimalToDecimalNumber
{
    static void Main()
    {
        Console.WriteLine("Enter hexadecimal number:");
        string hexNum = Console.ReadLine();
        long decimalNum = 0;
        int[] num =new int[hexNum.Length];
        for (int i = 0; i <=hexNum.Length-1; i++)
        {
            switch (hexNum[i].ToString())
            {
                case "A": num[i]= 10;
                    break;
                case "B": num[i] = 11;
                    break;
                case "C": num[i] = 12;
                    break;
                case "D": num[i] = 13;
                    break;
                case "E": num[i] = 14;
                    break;
                case "F": num[i] = 15;
                    break;
                default: num[i] = Convert.ToInt32(hexNum[i].ToString());
                    break;
            }
        }
            for (int j =  hexNum.Length-1, k=0; j >=0 ; j--,k++)
            {
                decimalNum += num[j] * (long)Math.Pow(16, k);
            }
            Console.WriteLine(decimalNum);
    }
}

