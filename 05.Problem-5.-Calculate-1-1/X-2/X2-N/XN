using System;

class CalculationOfTheAmountOfTheFactorial
{
    static void Main()
    {
        Console.WriteLine("Enter n and x:");
        int n = int.Parse(Console.ReadLine());
        int x = int.Parse(Console.ReadLine());
        double sum = 1;
        int Factorial = 1;
        for (int i = 1; i <=n; i++)
        {
            Factorial *= i;
            sum=sum+((Factorial)/Math.Pow(x,i));
        }
        Console.WriteLine("{0:F5}",sum);
    }
}

