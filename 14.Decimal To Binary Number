using System;

class DecimalToBinaryNumber
{
    static void Main()
    {
        Console.WriteLine("Enter decimal number:");
        long decimalNum = long.Parse(Console.ReadLine());
        if (decimalNum<0)
        {
            Console.WriteLine("Invalid input!");
            return;
        }
        string binary=" ";
        bool check=(decimalNum!=0);
        long remainder = 0;
        if (decimalNum==0)
        {
            binary += (remainder).ToString(); 
        }
        while (check)
        { 
          remainder=decimalNum%2;
          binary += (remainder).ToString();
          decimalNum = decimalNum / 2;
          check = (decimalNum != 0);
        }
        char[] binaryNum = binary.ToCharArray();
        Array.Reverse(binaryNum);
        string result = new string(binaryNum);
        Console.WriteLine(result);
    }
}

